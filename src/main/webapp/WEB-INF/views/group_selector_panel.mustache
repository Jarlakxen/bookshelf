<div class="row-fluid" ng-controller="PropertiesGroupListCtrl">
	<div class="span8 selector-multi-column">
	
		<div>
			<h3>Property Groups</h3>
		</div>
		
		<div class="selector-multi-column-scroll">
			<table>
				<tbody ng-repeat="propertiesGroup in propertiesGroups | orderBy:'name'">
					<tr>
						<td>
							<a href="#" ng-class="{selected: propertiesGroup.id==selectedPropertiesGroup.id}" style="text-decoration: underline;" ng-click="notifyAll('OnPropertiesGroupSelect', propertiesGroup)">
								{{propertiesGroup.name}}
							</a>
							<i class="icon-trash" style="float: right; cursor:pointer;" ng-click="removePropertiesGroup(propertiesGroup)" ></i>
						</td>
					</tr>
					<tr fade="propertiesGroup.id==selectedPropertiesGroup.id">
						<td>
							<span style="color: black">{{propertiesGroup.description}}</span>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="span4 selector-multi-column" style="padding-left: 10px; padding-right: 10px;">
	
		<form name="newPropertiesGroupForm" class="form-horizontal">
			<fieldset>
				<legend style="padding-top: 10px;">New Properties Group:</legend>
				<div class="control-group">
					<label class="control-label" style="width: 90px;">Name</label>
					<div class="controls" style="margin-left: 0px;">
						<input name="newPropertiesGroupNameInput" type="text" class="input-large" placeholder="Name" ng-model="newPropertiesGroup.name" ng-maxlength="50" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" style="width: 90px;">Description</label>
					<div class="controls" style="margin-left: 0px;">
						<textarea name="newPropertiesGroupDescriptionInput" row="3" ng-model="newPropertiesGroup.description" ng-maxlength="100"> </textarea>
					</div>
				</div>
				<div class="control-group">
					<div class="controls" style="margin-left: 0px;">
						 <button class="btn btn-primary" ng-click="addPropertiesGroup(newPropertiesGroup)" ng-disabled="!newPropertiesGroup.name || !newPropertiesGroup.description">Add</button>
					</div>
				</div>	
			</fieldset>				
		</form>

	</div>
</div>