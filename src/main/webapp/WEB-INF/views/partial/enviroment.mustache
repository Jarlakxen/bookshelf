{{={[ ]}=}}

<h3 ng-if="createMode">New Enviroment</h3>
<h3 ng-if="!createMode">Edit Enviroment</h3>

<hr/>

<form class="form-horizontal" name="enviromentForm" nonvalidate>
	<div class="form-group">
		<label for="enviromentNameInput" class="col-lg-1 control-label">Name</label>
		<div class="col-lg-3">
			<input id="enviromentNameInput" type="text" class="form-control" ng-model="enviroment.name" placeholder="Enter name" required ng-min-length="3" ng-min-length="30">
		</div>
	</div>
	<div class="form-group">
		<label for="enviromentDescriptionInput" class="col-lg-1 control-label">Description</label>
		<div class="col-lg-3">
			<input id="enviromentDescriptionInput" type="text" class="form-control" ng-model="enviroment.description" placeholder="Enter description" required ng-min-length="4" ng-min-length="40">
		</div>
	</div>
	

	<div class="form-group well well-lg col-lg-4">
		<div class="row">
			<div ng-if="createMode" class="col-md-offset-1 col-md-5">
				<button type="submit" class="btn btn-primary btn-block" ng-disabled="enviromentForm.$invalid" ng-click="add()">Add</button>
			</div>
			<div ng-if="!createMode" class="col-md-offset-1 col-md-6">
				<button type="submit" class="btn btn-primary btn-block" ng-disabled="enviromentForm.$invalid" ng-click="save()">Save</button>
			</div>
			<div class="col-md-4">
				<button type="submit" class="btn btn-warning btn-block" ng-click="back()">Back</button>
			</div>
		</div>
	</div>
</form>