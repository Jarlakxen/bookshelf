{{={[ ]}=}}

<h3 ng-if="createMode">New Project</h3>
<h3 ng-if="!createMode">Edit Project</h3>

<hr/>

<form class="form-horizontal" name="projectForm" nonvalidate>
	<div class="form-group">
		<label for="projectNameInput" class="col-lg-1 control-label">Name</label>
		<div class="col-lg-3">
			<input id="projectNameInput" type="text" class="form-control" ng-model="project.name" placeholder="Enter name" required ng-min-length="3" ng-min-length="30">
		</div>
	</div>
	<div class="form-group">
		<label for="projectDescriptionInput" class="col-lg-1 control-label">Description</label>
		<div class="col-lg-3">
			<input id="projectDescriptionInput" type="text" class="form-control" ng-model="project.description" placeholder="Enter description" required ng-min-length="4" ng-min-length="40">
		</div>
	</div>
	

	<div class="form-group well well-lg col-lg-4">
		<div class="row">
			<div ng-if="createMode" class="col-md-offset-1 col-md-5">
				<button type="submit" class="btn btn-primary btn-block" ng-disabled="projectForm.$invalid" ng-click="add()">Add</button>
			</div>
			<div ng-if="!createMode" class="col-md-offset-1 col-md-6">
				<button type="submit" class="btn btn-primary btn-block" ng-disabled="projectForm.$invalid" ng-click="save()">Save</button>
			</div>
			<div class="col-md-4">
				<button type="submit" class="btn btn-warning btn-block" ng-click="back()">Back</button>
			</div>
		</div>
	</div>
</form>