{{={[ ]}=}}

<div class="row">
	<div class="col-lg-12">
		<h2>Enviroments Contexts</h2>
		<hr/>
	</div>
</div>


<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th class="text-center">Actions</th>
		</tr>
	</thead>
	<tbody>
		<tr ng-repeat="enviroment in enviroments | orderBy:'name'">
			<td>{{enviroment.name}}</td>
			<td>{{enviroment.description}}</td>
			<td class="text-center actions">
				<a href="#/enviroment/{{enviroment.id}}" title="Edit"> <i class="fa fa-pencil-square-o"></i> </a>
				<a href="javascript:void(0)" title="Delete" ng-click="delete(enviroment)"> <i class="fa fa-times-circle"></i> </a>
			</td>
		</tr>
		<tr>
			<td colspan="2"></td>
			<td>
				<div class="row">
					<div class="col-md-offset-4 col-md-4">
						<button class="btn btn-sm btn-primary btn-block" type="button" ng-click="add()">Add</button>
					</div>
				</div>
			</td>
		</tr>
	</tbody>
</table>

